---
import "@/styles/reset.css";
import "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />
		<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
		<title>POS System</title>
	</head>
	<body>
		<main>
			<div>
				<h1>Point Of Sale System</h1>
				<p>
					Welcome to the POS System. This is a simple point of sale system for
					your business. It is designed to be simple and easy to use. It is also
					designed to be easy to customize and extend. It is built using the
					latest web technologies and is designed to be fast and responsive.
				</p>

				<a href="/dashboard"> Get Started</a>
			</div>
		</main>
		<style>
			div {
				padding: 1rem;
				display: flex;
				flex-direction: column;
				align-items: center;
				justify-content: center;
				gap: 2rem;
				text-align: center;
				min-height: 100dvh;
			}

			h1 {
				font-size: 4rem;
				filter: drop-shadow(0px 4px 5px rgba(0, 0, 0, 0.2));
			}

			p {
				font-size: 1.5rem;
				width: clamp(250px, 80%, 1200px);
			}

			a {
				font-size: 1.5rem;
				padding: 1rem 2rem;
				background-color: var(--primary);
				color: white;
				border-radius: 5px;
				text-decoration: none;
			}
		</style>
	</body>
</html>
